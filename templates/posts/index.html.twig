{% extends "base.html.twig" %}

{% block body %}
    <h1>Welcome to Bloggy !!!</h1>

    {% for post in posts %}
        <article>
            <h2>
                <a href="{{path('app_posts_show',{slug:post.slug})}}">
                    {{post.title}}
                </a>
            </h2>
            <p>
                Published <time datetime="{{post.publishedAt | date('Y-m-d H:i') }}">{{post.publishedAt|ago(locale='fr')}} le {{post.publishedAt | date('d-m-Y Ã  H:i') }}</time> par {{post.author.name}} 
            </p>
            <p>{{post.body | u.truncate(50,'...',false)}}</p>
        </article>
    {% endfor %}

{% endblock %}